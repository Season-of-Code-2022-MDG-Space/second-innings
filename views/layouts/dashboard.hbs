<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
    />
    <title>Untitled</title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="assets/css/Navigation-Clean.css" />
    
    <link rel="stylesheet" href="assets/css/styles.css" />
  </head>

  <body
    style=" background: linear-gradient(
      0deg,
      rgba(71, 43, 186, 1) 0%,
      rgba(44, 25, 121, 1) 100%
    );"
  >

    <nav class="navbar navbar-light navbar-expand-lg navigation-clean">
      <div class="container">
        <a class="navbar-brand" href="/dashboard">Second Innings</a><button
          data-bs-toggle="collapse"
          class="navbar-toggler"
          data-bs-target="#navcol-2"
        >
          <span class="visually-hidden">Toggle navigation</span><span
            class="navbar-toggler-icon"
          ></span>
        </button>
        <div class="collapse navbar-collapse" id="navcol-2">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/dashboard/listings">Your listings</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/dashboard/wishlist">Wishlist</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Cart</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <br />
    <nav class="navbar navbar-light navbar-expand-md">
      <div class="container-fluid" style="background-color: white;">
        <p class="filters"><b>Filters</b></p>
        <button
          data-bs-toggle="collapse"
          class="navbar-toggler"
          data-bs-target="#navcol-1"
        >
          <span class="visually-hidden">Toggle navigation</span><span
            class="navbar-toggler-icon"
          ></span>
        </button>
        <div class="collapse navbar-collapse" id="navcol-1">
          <ul class="navbar-nav">
            <li class="checkbox">
              <input type="radio" />Electronics
            </li>
            <li class="checkbox">
              <input type="radio" />Utilities
            </li>
            <li class="checkbox">
              <input type="radio" />Appliances
            </li>
          </ul>
          <button class="filter-btn">Apply</button>
        </div>
        Want to sell something?
        <button class="seller-btn" onclick="window.location='/form';">
          Seller form
        </button>
      </div>
    </nav>
    <br />
    <div
      class="table-responsive"
      style="
        background: var(--bs-gray-200);
        border-radius: 12px;
        border-width: 3.4px;
        border-style: solid;
        opacity: 1;
        filter: brightness(103%);
      "
    >
      <div class="page">
        <div class="sellerlist">
          <table class="table">
            <thead>
              <tr>
                <th>Product Category</th>
                <th>Product</th>
                <th>Price</th>
                <th></th>
              </tr>
            </thead>
            {{{body}}}
          </table>
        </div>
      </div>
    </div>

    <button
      class="logout-btn"
      onclick="window.location='/signin/logout'"
    >Logout</button>

    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min2.js"></script>
  </body>
</html>